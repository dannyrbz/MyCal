@model FIT5032_WebApplication.Models.CalculationModel

@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Mali" rel="stylesheet">

    <style>

        h2 {
            font-size: 100%;
            font-family: "Mali";
        }

        input, textarea, .droplist {
            width: 100%;
            height: 25px;
        }
        
        .calculator-bar {
            padding-top: 40px;
        }

        .calculator {
            padding-top: 10px;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
</head>
<body>
    <div class="calculator-bar col-sm-12">
        <div class="col-sm-1"></div>
        <div class="calculator col-sm-5, col-md-4 col-lg-4">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    <div>
                        @Html.Label("Age")
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Age)
                        <div>
                            @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        @Html.Label("Gender")
                    </div>
                    <div>
                        @Html.DropDownListFor(m => m.Gender, new List<SelectListItem> { new SelectListItem { Text = "Male", Value = "Male" },
                       new SelectListItem { Text = "Female", Value = "Female" } }, new { @class = "droplist" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        @Html.Label("Height (cm)")
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Height)
                        <div>
                            @Html.ValidationMessageFor(m => m.Height, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        @Html.Label("Weight (kg)")
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Weight)
                        <div>
                            @Html.ValidationMessageFor(m => m.Weight, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <br />
                <input type="submit" value="Calculate" />
            }
        </div>
        <div class="col-sm-1"></div>
        <div class="calorie-bar col-sm-5">

            <div class="same-weight">
                <p>To gain 1 kg per week, you need: @Html.DisplayFor(m => m.ResultAdd1000) calories</p>
                <div style="width:100%;display:block;background-color:forestgreen;text-align:right;color:#fff;">@Html.DisplayFor(m => m.ResultAdd1000)</div>
            </div>
            <br />
            <div class="same-weight">
                <p>To gain 0.5 kg per week, you need: @Html.ValueFor(m => m.ResultAdd500) calories</p>
                <div style="width:80%;display:block;background-color:forestgreen;text-align:right;color:#fff;">@Html.DisplayFor(m => m.ResultAdd500)</div>
            </div>
            <br />
            <div class="same-weight">
                <p>To maintain your weight, you need: @Html.DisplayFor(m => m.Result) calories</p>

                <div style="width:60%;display:block;background-color:forestgreen;text-align:right;color:#fff;">@Html.DisplayFor(m => m.Result)</div>
            </div>
            <br />
            <div class="same-weight">
                <p>To lose 0.5 kg per week, you need: @Html.DisplayFor(m => m.ResultMinus500) calories</p>

                <div style="width:40%;display:block;background-color:forestgreen;text-align:right;color:#fff;">@Html.DisplayFor(m => m.ResultMinus500)</div>
            </div>
            <br />
            <div class="same-weight">
                <p>To lose 1.0 kg per week, you need: @Html.DisplayFor(m => m.ResultMinus1000) calories</p>

                <div style="width:20%;display:block;background-color:forestgreen;text-align:right;color:#fff;">@Html.DisplayFor(m => m.ResultMinus1000)</div>
            </div>
        </div>
    </div>
</body>
</html>