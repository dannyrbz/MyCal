<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyCal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>

    <style>
        .banner {
            background: url(/Images/BannerPhoto.jpg);
            min-height: 450px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            text-align: center;
        }

        .banner-text {
            font-size: 1.5em;
        }

        h1 {
            font-weight: bold;
            font-size: 2em;
            padding-top: 180px;
            margin: auto auto;
        }
    </style>

</head>
<body>
    <div class="image-nav">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header nav-tabs">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="text-center">@Html.ActionLink("MyCal", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Recipes", "", "Recipes")</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("My Recipes", "MyRecipes", "Recipes")</li>
                            <li>@Html.ActionLink("Approvals", "Approval", "Recipes")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="banner">
            <div class="banner-text">
                <h1>Eat Healthy. Stay Healthy.</h1>
                <h2>Check out our amazing daily intake calculator and many awesome recipes.</h2>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
